@model SisDec.Models.Cliente
@{
    ViewBag.Title = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <div class="widget widget-nopad">
                        <div class="widget-header">
                            <i class="icon-user"></i>
                            <h3>Cliente:  @Model.Nome </h3>
                        </div>
                        <!-- /widget-header -->
                        <div class="widget-content">
                            <div class="widget big-stats-container">
                                <div class="widget-content">
                                    <div class="form-horizontal">
                                            <div class="form-horizontal">
                                                <hr />

                                                <div class="control-group">
                                                    @Html.LabelFor(model => model.Nome, new { @class = "control-label" })
                                                    <div class="controls">
                                                        @Html.DisplayFor(model => model.Nome, new { @class = "form-control" })
                                                    </div>
                                                </div>
                                                <div class="control-group">
                                                    @Html.LabelFor(model => model.Cpf, new { @class = "control-label" })
                                                    <div class="controls">
                                                        @Html.DisplayFor(model => model.Cpf, new { @class = "form-control" })
                                                    </div>
                                                </div>
                                                <div class="control-group">
                                                    @Html.LabelFor(model => model.Rg, new { @class = "control-label" })
                                                    <div class="controls">
                                                        @Html.DisplayFor(model => model.Rg, new { @class = "form-control" })
                                                    </div>
                                                </div>
                                                <div class="control-group">
                                                    @Html.LabelFor(model => model.enumSexo, new { @class = "control-label" })
                                                    <div class="controls">
                                                       @Html.DisplayFor(model => model.enumSexo, new { @class = "form-control" })
                                                    </div>
                                                </div>
                                                <div class="control-group">
                                                    @Html.LabelFor(model => model.DataNascimento, new { @class = "control-label" })
                                                    <div class="controls">
                                                        @Html.DisplayFor(model => model.DataNascimento, new { @class = "form-control" })
                                                    </div>
                                                </div>
                                                <div class="control-group">
                                                    @Html.LabelFor(model => model.Endereco, new { @class = "control-label col-md-2" })
                                                    <div class="controls">
                                                        @Html.DisplayFor(model => model.Endereco, new { @class = "form-control" })
                                                    </div>
                                                </div>
                                                <div class="control-group">
                                                    @Html.LabelFor(model => model.Complemento, new { @class = "control-label col-md-2" })
                                                    <div class="controls">
                                                        @Html.DisplayFor(model => model.Complemento, new { @class = "form-control" })
                                                    </div>
                                                </div>
                                                <div class="control-group">
                                                    @Html.LabelFor(model => model.objCidade, new { @class = "control-label col-md-2" })
                                                    <div class="controls">
                                                        @Html.DisplayFor(model => model.objCidade.Nome, new { @class = "form-control" })
                                                    </div>
                                                </div>

                                                <div class="control-group">
                                                    @Html.LabelFor(model => model.Cep, new { @class = "control-label col-md-2" })
                                                    <div class="controls">
                                                        @Html.DisplayFor(model => model.Cep, new { @class = "form-control" })
                                                    </div>
                                                </div>
                                                <div class="control-group">
                                                    @Html.LabelFor(model => model.Numero, new { @class = "control-label col-md-2" })
                                                    <div class="controls">
                                                        @Html.DisplayFor(model => model.Numero, new { @class = "form-control" })
                                                    </div>
                                                </div>
                                                <div class="control-group">
                                                    @Html.LabelFor(model => model.Bairro, new { @class = "control-label col-md-2" })
                                                    <div class="controls">
                                                        @Html.DisplayFor(model => model.Bairro, new { @class = "form-control" })
                                                    </div>
                                                </div>
                                                <div class="control-group">
                                                    @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
                                                    <div class="controls">
                                                        @Html.DisplayFor(model => model.Email, new { @class = "form-control" })
                                                    </div>
                                                </div>
                                                <div class="control-group">
                                                    @Html.LabelFor(model => model.Telefone, new { @class = "control-label col-md-2" })
                                                    <div class="controls">
                                                        @Html.DisplayFor(model => model.Telefone, new { @class = "form-control" })
                                                    </div>
                                                </div>
                                                <div class="form-actions">
                                                    <button type="submit" class="btn btn-primary">Salvar</button>

                                                    <a class="btn btn-danger" href="@Url.Action("Listar", "Cliente")" onclick="return confirm('Deseja realmente sair?'); ">Cancelar</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- /widget-content -->

    </div> <!-- /widget -->

</div> <!-- /span12 -->
