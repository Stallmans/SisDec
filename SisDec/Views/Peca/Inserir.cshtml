@model SisDec.Models.Peca



@{
    ViewBag.Title = "Inserir";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="main-inner">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <div class="widget widget-nopad">
                        <div class="widget-header">
                            <i class="icon-list-alt"></i>
                            <h3>Cadastrar Peça</h3>
                        </div>
                        <!-- /widget-header -->
                        <div class="widget-content">
                            <div class="widget big-stats-container">
                                <div class="widget-content">
                                    <div class="form-horizontal">
                                        <hr />

                                        <div class="control-group">
                                            @Html.LabelFor(model => model.Referencia, new { @class = "control-label" })
                                            <div class="controls">
                                                @Html.TextBoxFor(model => model.Referencia, new { @class = "form-control", placeholder = "Referencia", required = " " })
                                            </div>
                                            @Html.ValidationMessageFor(model => model.Referencia)
                                        </div>
                                        <div class="control-group">
                                            @Html.LabelFor(model => model.Descricao, new { @class = "control-label" })
                                            <div class="controls">
                                                @Html.TextBoxFor(model => model.Descricao, new { @class = "form-control", placeholder = "Descrição", required = " " })
                                            </div>
                                            @Html.ValidationMessageFor(model => model.Descricao)
                                        </div>
                                        <div class="control-group">
                                            @Html.LabelFor(model => model.Valor, new { @class = "control-label" })
                                            <div class="controls">
                                                @Html.TextBoxFor(model => model.Valor, new { @class = "form-control", placeholder = "Valor", required = " " })
                                            </div>
                                            @Html.ValidationMessageFor(model => model.Valor)
                                        </div>
                                        <div class="form-actions">
                                            <button type="submit" class="btn btn-primary">Salvar</button>
                                            <a class="btn btn-danger" href="@Url.Action("Listar","Peca")" onclick="return confirm('Deseja realmente sair?'); ">Cancelar</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /widget-content -->

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
