@model SisDec.Models.Requisicao

@{
    ViewBag.Title = "Inserir Nova Requisição";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <div class="widget widget-nopad">
                        <div class="widget-header">
                            <i class="icon-list-alt"></i>
                            <h3>Nova Requisição</h3>
                        </div>
                        <!-- /widget-header -->
                        <div class="widget-content">
                            <div class="widget big-stats-container">
                                <div class="widget-content">


                                    <div class="master">

                                        <table class="form-group">
                                            <tr>
                                                <td>
                                                    <div class="control-group">
                                                        @Html.LabelFor(model => model.NumeroRequisicao, new { @class = "control-label" })
                                                        <div class="controls">
                                                            @Html.TextBoxFor(model => model.NumeroRequisicao, new { @class = "form-control" })
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="control-group">
                                                        @Html.LabelFor(model => model.ObjCliente.Nome, new { @class = "control-label" })
                                                        <div class="controls">
                                                            @Html.TextBoxFor(model => model.ObjCliente.Nome, new { @class = "form-control" })
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="control-group">
                                                        @Html.LabelFor(model => model.DataPedido, new { @class = "control-label" })
                                                        <div class="controls">
                                                            @Html.TextBoxFor(model => model.DataPedido, new { @class = "form-control" })
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td colspan="3">
                                                    @Html.LabelFor(model => model.Finalidade, new { @class = "control-label" })
                                                    @Html.TextAreaFor(model => model.Finalidade, new { @class = "form-control" })
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="details">
                                        <div class="widget-header">
                                            <i class="icon-list-alt"></i>
                                            <h3>Peças da Requisição</h3>
                                        </div>
                                        <table class="table table-responsive">
                                            <tr>
                                                <td>Referencia</td>
                                                <td>Descrição</td>
                                                <td>Quantidade</td>
                                                <td>Preço</td>
                                                <td>&nbsp;</td>
                                            </tr>
                                            <tr class="mycontainer" id="mainrow">
                                                <td>
                                                    @Html.TextBoxFor(model => model.objPeca.Referencia, new { @class = "form-control" })
                                                </td>
                                                <td>
                                                    @Html.TextBoxFor(model => model.objPeca.Descricao, new { @class = "form-control" })
                                                </td>
                                                <td>
                                                    @Html.TextBoxFor(model => model.objPeca.Quantidade, new { @class = "form-control" })
                                                </td>
                                                <td>
                                                    @Html.TextBoxFor(model => model.objPeca.Valor, new { @class = "form-control" })
                                                </td>
                                                <td>
                                                    <input type="button" id="add" value="add" style="width:100px" class="btn btn-success" />
                                                </td>
                                            </tr>
                                        </table>
                                        <div id="orderItems">
                                            <table class="table table-responsive" id="orderdetailsItems"></table>
                                            <span id="orderItemError" style="color:red"></span>
                                        </div>
                                        <div style="padding:10px 0; text-align:right">
                                            <input id="submit" type="button" value="Salvar Requisição" class="btn btn-warning" style="padding:10px 20px" />
                                        </div>
                                    </div>

                                    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
                                    <script src="~/Scripts/myScripts.js"></script>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- /widget-content -->
