@model SisDec.Models.Usuarios
@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <center>
            <h4>Autenticação Obrigatoria!</h4>
            <img width="250px" height="100px" src="~/imagens/logoford.jpg">

            <hr />
            <div class="form-group">
        
                <div class="col-md-12">
                    @Html.TextBoxFor(model => model.Login, new { @class = "form-control", placeholder = "Login" })
                </div>
            </div>
            <div class="form-group">
                
                <div class="col-md-12">
                    @Html.PasswordFor(model => model.Senha, new { @class = "form-control", placeholder = "Senha" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-8">
                    <input type="submit" value="Logar" class="btn btn-lg btn-success" />
                </div>
            </div>
                        <p> teste</p>
        </center>
    </div>
}


